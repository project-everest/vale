procedure{:terminates false} WhileTest()
    modifies
        eax; ebx;
    requires
        0 <= eax <= ebx;
    ensures
        0 <= eax <= ebx + 1;
        2 * ebx - eax == old(2 * ebx - eax);
        eax > ebx;
{
    while (eax <= ebx)
        invariant
            0 <= eax <= ebx + 1;
            2 * ebx - eax == old(2 * ebx - eax);
        decreases 1 + ebx - eax;
    {
        Increment(eax);
        Increment(eax);
        Increment(ebx);
    }
}

