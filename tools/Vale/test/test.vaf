include "../../../src/arch/x64/X64.ValeDecls.vaf"

#verbatim interface implementation
module Test
open X64.Machine_s
open X64.ValeDecls
#endverbatim

procedure p()
    modifies
        rax; efl;
    requires
        rax < 10;
    ensures
        rax == old(rax) + 4;
{
    Add64Wrap(rax, 2);
    Add64Wrap(rax, 2);
}

#verbatim implementation
let double (x:int):int = x + x
#endverbatim

procedure Calls()
    requires 
        rax < 7;
    modifies
        rax; rbx; efl;
    ensures
        rax == old(rax) + 7;
{
    Add64Wrap(rax, 1);
    ghost var z := rax;
    Mov64(rbx, const(double(1)));
    assert rbx == 2;
    assert z == rax;
    if (rbx == 2)
    {
        Add64Wrap(rax, rbx);
        z := z + 2;
    }
    assert z == rax;
    p();
}

procedure Ghosts(ghost g1:int) returns(ghost g2:int)
    ensures
        g2 == g1 + 1;
{
    g2 := g1 + 1;
}

