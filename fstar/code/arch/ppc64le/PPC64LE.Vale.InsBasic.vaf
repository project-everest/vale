{
}

// Shift left general-purpose register with immediate bit value
procedure Sl64Imm(out dst:reg_opr, in src1:reg_opr, inline src2:bits64)
    {:public}
    {:instruction Ins(S.Sl64Imm(dst, src1, src2))}
    ensures
        dst == old(ishl64(src1, src2));
{
}
